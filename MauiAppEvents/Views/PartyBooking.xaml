<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppEvents.Views.PartyBooking"
             Title="PartyBooking"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="#FDF2F8">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <!-- Header -->
            <VerticalStackLayout Spacing="5" Margin="0,10,0,30">
                <Label 
                    Text="ðŸŽ‰ Event Organizer"
                    FontFamily="PoppinsSemiBold"
                    FontSize="32"
                    HorizontalOptions="Center"
                    TextColor="#BE185D"/>
                <Label 
                    Text="Create your perfect event"
                    FontFamily="PoppinsRegular"
                    FontSize="16"
                    HorizontalOptions="Center"
                    TextColor="#6B7280"/>
            </VerticalStackLayout>

            <!-- Event Name Section -->
            <Frame Padding="20" BackgroundColor="#FFFFFF" BorderColor="#E5E7EB" HasShadow="True">
                <VerticalStackLayout Spacing="12">
                    <HorizontalStackLayout Spacing="8">
                        <Label Text="ðŸŽ¯" FontSize="20"/>
                        <Label Text="Event Name" 
                               FontFamily="PoppinsSemiBold" 
                               FontSize="18" 
                               TextColor="#1F2937"
                               VerticalOptions="Center"/>
                    </HorizontalStackLayout>
                    <Entry x:Name="entry_eventName" 
                           Placeholder="Enter your event name" 
                           PlaceholderColor="#9CA3AF"
                           TextColor="#1F2937"
                           FontFamily="PoppinsRegular"
                           BackgroundColor="#F9FAFB"/>
                </VerticalStackLayout>
            </Frame>

            <!-- Event Period Section -->
            <Frame Padding="20" BackgroundColor="#FFFFFF" BorderColor="#E5E7EB" HasShadow="True">
                <VerticalStackLayout Spacing="15">
                    <HorizontalStackLayout Spacing="8">
                        <Label Text="ðŸ“…" FontSize="20"/>
                        <Label Text="Event Period" 
                               FontFamily="PoppinsSemiBold" 
                               FontSize="18" 
                               TextColor="#1F2937"
                               VerticalOptions="Center"/>
                    </HorizontalStackLayout>

                    <Grid RowDefinitions="Auto, Auto" ColumnDefinitions="*, *" ColumnSpacing="15" RowSpacing="15">
                        <VerticalStackLayout Grid.Row="0" Grid.Column="0" Spacing="8">
                            <Label Text="Start Date" 
                                   FontFamily="PoppinsMedium" 
                                   TextColor="#374151" 
                                   FontSize="14"/>
                            <DatePicker x:Name="dtpck_start"
                                        DateSelected="dtpck_start_DateSelected"
                                        Format="dd/MM/yyyy"
                                        BackgroundColor="#F9FAFB"
                                        TextColor="#1F2937"/>
                        </VerticalStackLayout>

                        <VerticalStackLayout Grid.Row="0" Grid.Column="1" Spacing="8">
                            <Label Text="End Date" 
                                   FontFamily="PoppinsMedium" 
                                   TextColor="#374151" 
                                   FontSize="14"/>
                            <DatePicker x:Name="dtpck_end" 
                                        Format="dd/MM/yyyy"
                                        BackgroundColor="#F9FAFB"
                                        TextColor="#1F2937"/>
                        </VerticalStackLayout>
                    </Grid>
                </VerticalStackLayout>
            </Frame>

            <!-- Participants Section -->
            <Frame Padding="20" BackgroundColor="#FFFFFF" BorderColor="#E5E7EB" HasShadow="True">
                <VerticalStackLayout Spacing="15">
                    <HorizontalStackLayout Spacing="8">
                        <Label Text="ðŸ‘¥" FontSize="20"/>
                        <Label Text="Participants" 
                               FontFamily="PoppinsSemiBold" 
                               FontSize="18" 
                               TextColor="#1F2937"
                               VerticalOptions="Center"/>
                    </HorizontalStackLayout>

                    <HorizontalStackLayout Spacing="15" HorizontalOptions="CenterAndExpand">
                        <Label Text="Number of participants:" 
                               FontFamily="PoppinsMedium" 
                               TextColor="#374151"
                               VerticalOptions="Center"/>
                        <Frame Padding="10,5" BackgroundColor="#F3E8FF" BorderColor="#7C3AED">
                            <Label Text="{Binding Value}" 
                                   BindingContext="{x:Reference stp_participants}" 
                                   FontFamily="PoppinsSemiBold"
                                   TextColor="#7C3AED"
                                   FontSize="18"/>
                        </Frame>
                    </HorizontalStackLayout>

                    <Stepper x:Name="stp_participants"
                             Minimum="1" 
                             Maximum="500" 
                             Increment="1"
                             Value="10"
                             HorizontalOptions="Center"
                             BackgroundColor="DarkGray"/>
                </VerticalStackLayout>
            </Frame>

            <!-- Event Location Section -->
            <Frame Padding="20" BackgroundColor="#FFFFFF" BorderColor="#E5E7EB" HasShadow="True">
                <VerticalStackLayout Spacing="12">
                    <HorizontalStackLayout Spacing="8">
                        <Label Text="ðŸ“" FontSize="20"/>
                        <Label Text="Event Location" 
                               FontFamily="PoppinsSemiBold" 
                               FontSize="18" 
                               TextColor="#1F2937"
                               VerticalOptions="Center"/>
                    </HorizontalStackLayout>
                    <Entry x:Name="entry_location" 
                           Placeholder="Enter event location/address" 
                           PlaceholderColor="#9CA3AF"
                           TextColor="#1F2937"
                           FontFamily="PoppinsRegular"
                           BackgroundColor="#F9FAFB"/>
                </VerticalStackLayout>
            </Frame>

            <!-- Cost Per Participant Section -->
            <Frame Padding="20" BackgroundColor="#FFFFFF" BorderColor="#E5E7EB" HasShadow="True">
                <VerticalStackLayout Spacing="12">
                    <HorizontalStackLayout Spacing="8">
                        <Label Text="ðŸ’°" FontSize="20"/>
                        <Label Text="Cost Per Participant" 
                               FontFamily="PoppinsSemiBold" 
                               FontSize="18" 
                               TextColor="#1F2937"
                               VerticalOptions="Center"/>
                    </HorizontalStackLayout>
                    <Entry x:Name="entry_costPerParticipant" 
                           Placeholder="0.00" 
                           PlaceholderColor="#9CA3AF"
                           TextColor="#1F2937"
                           FontFamily="PoppinsRegular"
                           BackgroundColor="#F9FAFB"
                           Keyboard="Numeric"/>
                </VerticalStackLayout>
            </Frame>

            <!-- Action Buttons -->
            <VerticalStackLayout Spacing="15" Margin="0,20,0,30">
                <Button Text="ðŸŽ‰ Create My Event!" 
                        Clicked="Button_Clicked" 
                        BackgroundColor="#10B981" 
                        TextColor="#FFFFFF"
                        FontFamily="PoppinsSemiBold"
                        FontSize="16"
                        HeightRequest="50"/>

                <Button 
                    x:Name="btn_about"
                    Text="â„¹ï¸ About"
                    FontSize="14"
                    HeightRequest="40"
                    Opacity="0.8"
                    HorizontalOptions="Center"
                    Clicked="Btn_About_Clicked"
                    BackgroundColor="Transparent"
                    TextColor="#6B7280"
                    BorderColor="#6B7280"
                    BorderWidth="1"/>
            </VerticalStackLayout>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>